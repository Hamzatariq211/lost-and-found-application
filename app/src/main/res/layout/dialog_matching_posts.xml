<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Dialog Title -->
        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Possible Matches"
            android:textColor="@color/button_purple"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/matchingProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone" />

        <!-- Empty Text -->
        <TextView
            android:id="@+id/emptyMatchingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No matching posts found yet. We'll notify you when someone posts a similar item!"
            android:textColor="@color/search_hint_color"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="20dp"
            android:visibility="gone" />

        <!-- Matching Posts RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/matchingPostsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="400dp"
            android:visibility="gone" />

        <!-- Close Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/closeButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="Close"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/button_purple"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

