<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- Item Image with better styling -->
        <androidx.cardview.widget.CardView
            android:id="@+id/imageCard"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/chatItemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/home_background" />

        </androidx.cardview.widget.CardView>

        <!-- User Name -->
        <TextView
            android:id="@+id/chatUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="8dp"
            android:text="User Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/imageCard"
            app:layout_constraintEnd_toStartOf="@id/chatTimestamp"
            app:layout_constraintTop_toTopOf="@id/imageCard" />

        <!-- Item Name -->
        <TextView
            android:id="@+id/chatItemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Re: Item Name"
            android:textColor="@color/button_purple"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/chatUserName"
            app:layout_constraintEnd_toEndOf="@id/chatUserName"
            app:layout_constraintTop_toBottomOf="@id/chatUserName" />

        <!-- Last Message -->
        <TextView
            android:id="@+id/chatLastMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Last message..."
            android:textColor="@color/search_hint_color"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/chatUserName"
            app:layout_constraintEnd_toEndOf="@id/chatUserName"
            app:layout_constraintTop_toBottomOf="@id/chatItemName"
            app:layout_constraintBottom_toBottomOf="@id/imageCard" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/chatTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2h ago"
            android:textColor="@color/search_hint_color"
            android:textSize="11sp"
            android:fontFamily="sans-serif"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageCard" />

        <!-- Unread Badge with better design -->
        <TextView
            android:id="@+id/unreadBadge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/add_button_background"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chatTimestamp"
            android:layout_marginTop="6dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
