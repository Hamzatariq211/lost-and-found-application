<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:maxWidth="280dp"
        android:layout_marginEnd="60dp">

        <!-- Sender Name -->
        <TextView
            android:id="@+id/receivedSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp"
            android:text="Sender Name"
            android:textColor="@color/button_purple"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- Received Message Bubble with better design -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <TextView
                android:id="@+id/receivedMessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Message text"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2dp" />

        </androidx.cardview.widget.CardView>

        <!-- Timestamp -->
        <TextView
            android:id="@+id/receivedTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:text="12:00 PM"
            android:textColor="@color/search_hint_color"
            android:textSize="11sp"
            android:fontFamily="sans-serif" />

    </LinearLayout>

</FrameLayout>
